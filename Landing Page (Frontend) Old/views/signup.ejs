<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>ChainTorque Sign Up</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="/styles.css">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    html,
    body {
      overflow-x: hidden;
      overflow-y: auto;
      min-height: 100%;
      width: 100%;
    }

    body {
      background: #0a0a0f;
      min-height: 100vh;
      position: relative;
    }

    /* Animated 3D grid background */
    .grid-bg {
      position: fixed;
      inset: 0;
      background:
        linear-gradient(transparent 0%, rgba(99, 102, 241, 0.03) 50%, transparent 100%),
        linear-gradient(90deg, transparent 0%, rgba(99, 102, 241, 0.03) 50%, transparent 100%);
      background-size: 60px 60px;
      animation: gridMove 20s linear infinite;
      transform: perspective(500px) rotateX(60deg);
      transform-origin: center top;
    }

    @keyframes gridMove {
      0% {
        background-position: 0 0;
      }

      100% {
        background-position: 60px 60px;
      }
    }

    /* Gradient overlay */
    .gradient-overlay {
      position: fixed;
      inset: 0;
      background:
        radial-gradient(ellipse at 50% 0%, rgba(99, 102, 241, 0.15) 0%, transparent 50%),
        radial-gradient(ellipse at 80% 50%, rgba(139, 92, 246, 0.1) 0%, transparent 40%),
        radial-gradient(ellipse at 20% 80%, rgba(236, 72, 153, 0.08) 0%, transparent 40%),
        linear-gradient(180deg, #0a0a0f 0%, #1a1a2e 50%, #0a0a0f 100%);
      pointer-events: none;
    }

    /* Floating 3D shapes */
    .floating-shape {
      position: fixed;
      opacity: 0.6;
      animation: floatRotate 15s ease-in-out infinite;
    }

    .shape-1 {
      top: 15%;
      left: 10%;
      width: 120px;
      height: 120px;
      border: 2px solid rgba(99, 102, 241, 0.3);
      transform: rotate(45deg);
      animation-delay: 0s;
    }

    .shape-2 {
      top: 60%;
      right: 15%;
      width: 80px;
      height: 80px;
      background: linear-gradient(135deg, rgba(139, 92, 246, 0.2), transparent);
      border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%;
      animation-delay: -5s;
    }

    .shape-3 {
      bottom: 20%;
      left: 20%;
      width: 60px;
      height: 60px;
      border: 2px solid rgba(236, 72, 153, 0.3);
      border-radius: 50%;
      animation-delay: -10s;
    }

    .shape-4 {
      top: 30%;
      right: 25%;
      width: 100px;
      height: 100px;
      background: linear-gradient(45deg, rgba(99, 102, 241, 0.15), transparent);
      clip-path: polygon(50% 0%, 100% 50%, 50% 100%, 0% 50%);
      animation-delay: -3s;
    }

    .shape-5 {
      top: 70%;
      left: 8%;
      width: 40px;
      height: 40px;
      background: rgba(139, 92, 246, 0.3);
      transform: rotate(30deg);
      animation-delay: -7s;
    }

    @keyframes floatRotate {

      0%,
      100% {
        transform: translateY(0) rotate(0deg);
      }

      25% {
        transform: translateY(-20px) rotate(5deg);
      }

      50% {
        transform: translateY(-10px) rotate(-5deg);
      }

      75% {
        transform: translateY(-25px) rotate(3deg);
      }
    }

    /* Glowing orbs */
    .glow-orb {
      position: fixed;
      border-radius: 50%;
      filter: blur(60px);
      animation: pulse 8s ease-in-out infinite;
    }

    .orb-1 {
      top: 10%;
      right: 20%;
      width: 200px;
      height: 200px;
      background: rgba(99, 102, 241, 0.3);
      animation-delay: 0s;
    }

    .orb-2 {
      bottom: 20%;
      left: 15%;
      width: 150px;
      height: 150px;
      background: rgba(139, 92, 246, 0.25);
      animation-delay: -4s;
    }

    .orb-3 {
      top: 50%;
      left: 50%;
      width: 300px;
      height: 300px;
      background: rgba(236, 72, 153, 0.1);
      transform: translate(-50%, -50%);
      animation-delay: -2s;
    }

    @keyframes pulse {

      0%,
      100% {
        opacity: 0.5;
        transform: scale(1);
      }

      50% {
        opacity: 0.8;
        transform: scale(1.1);
      }
    }

    /* Signup card */
    .signup-card {
      background: rgba(20, 20, 35, 0.85);
      backdrop-filter: blur(20px);
      -webkit-backdrop-filter: blur(20px);
      border: 1px solid rgba(255, 255, 255, 0.08);
      box-shadow:
        0 25px 50px rgba(0, 0, 0, 0.5),
        0 0 100px rgba(99, 102, 241, 0.1),
        inset 0 1px 0 rgba(255, 255, 255, 0.05);
    }

    .signup-container {
      position: relative;
      z-index: 10;
      display: flex;
      align-items: center;
      justify-content: center;
      min-height: 100vh;
      padding: 1rem;
    }

    /* Clerk dark theme overrides */
    .cl-rootBox {
      width: 100% !important;
    }

    .cl-card {
      background: transparent !important;
      box-shadow: none !important;
      border: none !important;
    }

    .cl-headerTitle,
    .cl-headerSubtitle,
    .cl-dividerText {
      color: #e5e7eb !important;
    }

    .cl-formFieldLabel {
      color: #cbd5e1 !important;
    }

    .cl-formFieldInput {
      background: rgba(255, 255, 255, 0.05) !important;
      border: 1px solid rgba(255, 255, 255, 0.1) !important;
      color: #f1f5f9 !important;
    }

    .cl-formFieldInput:focus {
      border-color: #818cf8 !important;
      box-shadow: 0 0 0 2px rgba(129, 140, 248, 0.2) !important;
    }

    .cl-footerActionText {
      color: #94a3b8 !important;
    }

    .cl-footerActionLink {
      color: #818cf8 !important;
    }

    .cl-socialButtonsBlockButton {
      background: rgba(255, 255, 255, 0.15) !important;
      backdrop-filter: blur(12px) !important;
      -webkit-backdrop-filter: blur(12px) !important;
      border: 1px solid rgba(255, 255, 255, 0.25) !important;
      color: #ffffff !important;
    }

    .cl-socialButtonsBlockButton:hover {
      background: rgba(255, 255, 255, 0.25) !important;
      border-color: rgba(255, 255, 255, 0.4) !important;
    }

    /* Make GitHub icon white - target the first social button's icon */
    .cl-socialButtonsBlockButton:first-child svg,
    .cl-socialButtonsBlockButton:first-child img {
      filter: brightness(0) invert(1) !important;
    }
  </style>
</head>

<body>
  <!-- 3D Grid Background -->
  <div class="grid-bg"></div>

  <!-- Gradient Overlay -->
  <div class="gradient-overlay"></div>

  <!-- Floating Shapes -->
  <div class="floating-shape shape-1"></div>
  <div class="floating-shape shape-2"></div>
  <div class="floating-shape shape-3"></div>
  <div class="floating-shape shape-4"></div>
  <div class="floating-shape shape-5"></div>

  <!-- Glowing Orbs -->
  <div class="glow-orb orb-1"></div>
  <div class="glow-orb orb-2"></div>
  <div class="glow-orb orb-3"></div>

  <!-- Signup Container -->
  <div class="signup-container">
    <div class="signup-card rounded-3xl w-full max-w-md p-8">
      <!-- Header -->
      <div class="text-center mb-8">
        <div class="w-20 h-20 mx-auto mb-4 flex items-center justify-center">
          <img src="/favicon.png" alt="ChainTorque" class="w-20 h-20 object-contain" />
        </div>
        <h1 class="text-2xl font-bold text-white mb-2">Join ChainTorque</h1>
        <p class="text-gray-400">Create your account</p>
      </div>

      <!-- Clerk Sign Up Component -->
      <div id="sign-up" class="flex justify-center"></div>

      <!-- Footer Link -->
      <div class="text-center mt-6">
        <a href="/login" class="text-indigo-400 hover:text-indigo-300 transition-colors">
          Already have an account? <span class="font-semibold">Sign in</span>
        </a>
      </div>
    </div>
  </div>

  <script async crossorigin="anonymous" data-clerk-publishable-key="<%= process.env.CLERK_PUBLISHABLE_KEY %>"
    src="https://cdn.jsdelivr.net/npm/@clerk/clerk-js@latest/dist/clerk.browser.js"></script>

  <script>
    window.addEventListener("load", async function () {
      await Clerk.load();

      if (Clerk.user) {
        window.location.href = "http://localhost:8080";
        return;
      }

      Clerk.mountSignUp(document.getElementById("sign-up"), {
        appearance: {
          baseTheme: "dark",
          variables: {
            colorPrimary: "#6366f1",
            colorBackground: "transparent",
            colorInputBackground: "rgba(255, 255, 255, 0.05)",
            colorInputText: "#f1f5f9",
            colorText: "#e5e7eb",
            colorTextSecondary: "#94a3b8",
            borderRadius: "12px"
          },
          elements: {
            rootBox: "w-full",
            card: "bg-transparent shadow-none border-none",
            formButtonPrimary: "bg-gradient-to-r from-indigo-500 to-purple-600 hover:from-indigo-600 hover:to-purple-700"
          }
        }
      });

      setInterval(() => {
        if (Clerk.user) {
          window.location.href = "http://localhost:8080";
        }
      }, 1000);
    });
  </script>
</body>

</html>