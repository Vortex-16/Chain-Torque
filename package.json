{
  "name": "chaintorque-monorepo",
  "version": "1.0.0",
  "description": "ChainTorque Web3 Engineering Marketplace - Monorepo",
  "private": true,
  "workspaces": [
    "Landing Page (Frontend)",
    "Marketplace (Frontend)"
  ],
  "scripts": {
    "dev:landing": "cd \"Landing Page (Frontend)\" && npm run dev",
    "dev:marketplace": "cd \"Marketplace (Frontend)\" && npm run dev",
    "dev:both": "concurrently \"npm run dev:landing\" \"npm run dev:marketplace\"",
    "start:landing": "cd \"Landing Page (Frontend)\" && npm start",
    "start:marketplace": "cd \"Marketplace (Frontend)\" && npm run build && npm run preview",
    "build:marketplace": "cd \"Marketplace (Frontend)\" && npm run build",
    "install:all": "npm install && cd \"Landing Page (Frontend)\" && npm install && cd ../\"Marketplace (Frontend)\" && npm install",
    "clean": "rimraf node_modules \"Landing Page (Frontend)/node_modules\" \"Marketplace (Frontend)/node_modules\""
  },
  "keywords": [
    "web3",
    "cad",
    "marketplace",
    "blockchain",
    "engineering",
    "monorepo"
  ],
  "author": "ChainTorque Team",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^20.5.0",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "rimraf": "^5.0.5",
    "typescript": "^5.2.2",
    "vite": "^5.2.0"
  },
  "dependencies": {
    "@clerk/clerk-js": "^5.85.0",
    "@clerk/clerk-react": "^5.42.1",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-toast": "^1.1.4",
    "@radix-ui/react-tooltip": "^1.0.6",
    "@tanstack/react-query": "^4.28.0",
    "autoprefixer": "^10.4.21",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "dotenv": "^17.2.1",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "lucide-react": "^0.263.1",
    "next-themes": "^0.2.1",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.1",
    "sonner": "^1.7.4",
    "tailwind-merge": "^1.14.0",
    "tailwindcss": "^3.4.11",
    "tailwindcss-animate": "^1.0.7"
  }
}
