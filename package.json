{
  "name": "chaintorque-monorepo",
  "version": "1.0.0",
  "description": "ChainTorque Web3 Engineering Platform - Monorepo",
  "private": true,
  "workspaces": [
    "Landing Page (Frontend)",
    "Marketplace (Frontend)",
    "Marketplace (Backend)",
    "CAD (Frontend)"
  ],
  "scripts": {
    "dev": "cross-env NODE_NO_WARNINGS=1 concurrently --silent --names \"LP,MP,BE,CAD\" --prefix-colors \"cyan,magenta,yellow,green\" \"npm run dev:landing\" \"npm run dev:marketplace\" \"npm run dev:backend\" \"npm run dev:cad\"",
    "build": "concurrently --silent \"npm run build:landing\" \"npm run build:marketplace\" \"npm run build:backend\" \"npm run build:cad\"",
    "start": "cross-env NODE_ENV=production NODE_NO_WARNINGS=1 concurrently --silent \"npm run start:marketplace\" \"npm run start:backend\"",
    "test": "npm run test:contracts",
    "lint": "npm run lint:frontend", 
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "clean": "echo Cleaning node_modules... && rd /s /q node_modules 2>nul || echo Root cleaned && rd /s /q \"Landing Page (Frontend)\\node_modules\" 2>nul || echo Landing cleaned && rd /s /q \"Marketplace (Frontend)\\node_modules\" 2>nul || echo Marketplace cleaned && rd /s /q \"Marketplace (Backend)\\node_modules\" 2>nul || echo Backend cleaned && rd /s /q \"CAD (Frontend)\\node_modules\" 2>nul || echo CAD cleaned && echo All node_modules cleaned!",
    "update": "npm update && npm update --workspaces",
    "deploy:local": "cd \"Marketplace (Backend)\" && npx hardhat run scripts/deploy.js --network hardhat",
    "deploy:sepolia": "cd \"Marketplace (Backend)\" && npx hardhat run scripts/deploy.js --network sepolia",
    "dev:landing": "cross-env NODE_NO_WARNINGS=1 npm run dev --workspace \"Landing Page (Frontend)\"",
    "dev:marketplace": "cross-env NODE_NO_WARNINGS=1 npm run dev --workspace \"Marketplace (Frontend)\"",
    "dev:backend": "cross-env NODE_NO_WARNINGS=1 npm run dev --workspace \"Marketplace (Backend)\"",
    "dev:cad": "cross-env NODE_NO_WARNINGS=1 GENERATE_SOURCEMAP=false npm run start --workspace \"CAD (Frontend)\"",
    "build:landing": "npm run build --workspace \"Landing Page (Frontend)\"",
    "build:marketplace": "npm run build --workspace \"Marketplace (Frontend)\"",
    "build:backend": "npm run build --workspace \"Marketplace (Backend)\"",
    "build:cad": "cross-env GENERATE_SOURCEMAP=false npm run build --workspace \"CAD (Frontend)\"",
    "test:contracts": "cd \"Marketplace (Backend)\" && npx hardhat test",
    "lint:frontend": "eslint \"*/src/**/*.{js,jsx,ts,tsx}\" --report-unused-disable-directives --max-warnings 0"
  },
  "keywords": [
    "web3",
    "cad",
    "marketplace",
    "blockchain",
    "engineering",
    "monorepo"
  ],
  "author": "ChainTorque Team",
  "license": "ISC",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^2.0.0",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@openzeppelin/contracts": "^4.9.3",
    "@types/node": "^20.5.0",
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "concurrently": "^8.2.2",
    "cross-env": "^10.0.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "hardhat": "^2.17.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.5",
    "typescript": "^4.9.5",
    "vite": "^6.0.0"
  },
  "dependencies": {
    "@clerk/clerk-js": "^5.85.0",
    "@clerk/clerk-react": "^5.42.1",
    "@clerk/clerk-sdk-node": "^4.13.7",
    "@lighthouse-web3/sdk": "^0.4.1",
    "@metamask/providers": "^22.1.0",
    "@nomicfoundation/hardhat-toolbox": "^2.0.2",
    "@openzeppelin/contracts": "^4.9.6",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-toast": "^1.1.4",
    "@radix-ui/react-toggle": "^1.1.10",
    "@radix-ui/react-toggle-group": "^1.1.11",
    "@radix-ui/react-tooltip": "^1.0.6",
    "@react-three/drei": "^9.0.0",
    "@react-three/fiber": "^8.0.0",
    "@tanstack/react-query": "^4.28.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
