    "multer": "^1.4.5-lts.1",
    "next-themes": "^0.2.1",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0",
    "react-router-dom": "^6.8.1",
    "sonner": "^1.7.4",
    "tailwind-merge": "^1.14.0",
    "tailwindcss": "^3.4.11",
    "tailwindcss-animate": "^1.0.7",
    "three": "^0.179.1",
    "three-stdlib": "^2.36.0",
    "web-vitals": "^5.1.0",
    "web3": "^4.11.1"
  }
}
