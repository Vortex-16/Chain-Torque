{
  "name": "chaintorque-monorepo",
  "version": "1.0.0",
  "description": "ChainTorque Web3 Engineering Platform - Monorepo",
  "private": true,
  "workspaces": [
    "Landing Page (Frontend) Old",
    "Marketplace (Frontend)",
    "backend",
    "CAD (Frontend)"
  ],
  "scripts": {
    "dev": "bun run --bun concurrently --names \"LP,MP,BE,CAD\" --prefix-colors \"cyan,magenta,yellow,green\" \"bun run dev:landing\" \"bun run dev:marketplace\" \"bun run dev:backend\" \"bun run dev:cad\"",
    "dev:core": "bun run --bun concurrently --names \"LP,MP,BE\" --prefix-colors \"cyan,magenta,yellow\" \"bun run dev:landing\" \"bun run dev:marketplace\" \"bun run dev:backend\"",
    "build": "bun run concurrently --silent \"bun run build:landing\" \"bun run build:marketplace\" \"bun run build:backend\" \"bun run build:cad\"",
    "start": "NODE_ENV=production bun run concurrently --silent \"bun run start:marketplace\" \"bun run start:backend\"",
    "test": "bun run test:contracts",
    "lint": "bun run lint:frontend",
    "format": "bun x prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "clean": "bun x rimraf node_modules **/node_modules",
    "update": "bun update",
    "deploy:local": "cd backend && bun x hardhat run scripts/deploy.js --network hardhat",
    "deploy:sepolia": "cd backend && bun x hardhat run scripts/deploy.js --network sepolia",
    "dev:landing": "cd \"Landing Page (Frontend) Old\" && PORT=5000 bun run dev",
    "dev:marketplace": "cd \"Marketplace (Frontend)\" && bun run dev",
    "dev:backend": "cd backend && PORT=5001 bun run dev",
    "dev:cad": "cd \"CAD (Frontend)\" && cross-env PORT=3001 GENERATE_SOURCEMAP=false bun run start",
    "build:landing": "cd \"Landing Page (Frontend) Old\" && bun run build",
    "build:marketplace": "cd \"Marketplace (Frontend)\" && bun run build",
    "build:backend": "cd backend && bun run build",
    "build:cad": "cd \"CAD (Frontend)\" && GENERATE_SOURCEMAP=false bun run build",
    "test:contracts": "cd backend && bun x hardhat test",
    "lint:frontend": "bun x eslint \"*/src/**/*.{js,jsx,ts,tsx}\" --report-unused-disable-directives --max-warnings 0"
  },
  "keywords": [
    "web3",
    "cad",
    "marketplace",
    "blockchain",
    "engineering",
    "monorepo"
  ],
  "author": "Archisman Pal",
  "license": "ISC",
  "devDependencies": {
    "@vitejs/plugin-react-swc": "^3.5.0",
    "concurrently": "^8.2.2",
    "cross-env": "^10.1.0",
    "hardhat": "^2.26.3",
    "typescript": "^5.0.0",
    "vite": "^6.0.0"
  },
  "dependencies": {
    "@clerk/clerk-react": "^5.42.1",
    "@lighthouse-web3/sdk": "^0.4.1",
    "@metamask/providers": "^22.1.0",
    "@nomicfoundation/hardhat-toolbox": "^2.0.2",
    "@openzeppelin/contracts": "^4.9.6",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-toast": "^1.1.4",
    "@radix-ui/react-toggle": "^1.1.10",
    "@radix-ui/react-toggle-group": "^1.1.11",
    "@radix-ui/react-tooltip": "^1.0.6",
    "@react-three/drei": "^9.0.0",
    "@react-three/fiber": "^8.0.0",
    "@tanstack/react-query": "^4.28.0",
    "autoprefixer": "^10.4.21",
    "axios": "^1.7.9",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "ejs": "^3.1.10",
    "ethers": "^5.8.0",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "lucide-react": "^0.263.1",
    "mongoose": "^8.18.0",
    "multer": "^1.4.5-lts.1",
    "next-themes": "^0.2.1",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0",
    "react-router-dom": "^6.8.1",
    "react-scripts": "5.0.1",
    "sonner": "^1.7.4",
    "tailwind-merge": "^1.14.0",
    "tailwindcss": "^3.4.11",
    "tailwindcss-animate": "^1.0.7",
    "three": "^0.179.1",
    "three-stdlib": "^2.36.0",
    "web-vitals": "^5.1.0"
  }
}