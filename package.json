{
  "name": "chaintorque-monorepo",
  "version": "1.0.0",
  "description": "ChainTorque Web3 Engineering Marketplace - Monorepo",
  "private": true,
  "workspaces": [
    "Landing Page (Frontend)",
    "Marketplace (Frontend)",
    "Marketplace (Backend)"
  ],
  "scripts": {
    "env:show": "node -e \"require('dotenv').config({ path: require('path').resolve(process.cwd(), '.env') }); console.log('API:', process.env.PINATA_API_KEY); console.log('SECRET:', process.env.PINATA_SECRET_API_KEY); console.log('JWT:', process.env.PINATA_JWT);\"",
    "dev:landing": "cd \"Landing Page (Frontend)\" && npm run dev",
    "dev:marketplace": "cd \"Marketplace (Frontend)\" && npm run dev",
    "dev:backend": "cd \"Marketplace (Backend)\" && npm run dev",
    "start:backend": "cd \"Marketplace (Backend)\" && npm start",
    "dev:both": "concurrently \"npm run dev:marketplace\" \"npm run dev:backend\"",
    "dev:all": "concurrently \"npm run dev:landing\" \"npm run dev:marketplace\" \"cd Marketplace (Backend) && npm run dev\"",
    "start:landing": "cd \"Landing Page (Frontend)\" && npm start",
    "start:marketplace": "cd \"Marketplace (Frontend)\" && npm run build && npm run preview",
    "build:marketplace": "cd \"Marketplace (Frontend)\" && npm run build",
    "compile:contracts": "cd \"Marketplace (Backend)\" && npx hardhat compile",
    "deploy:contracts": "cd \"Marketplace (Backend)\" && npx hardhat run scripts/deploy.js --network mumbai",
    "deploy:local": "cd \"Marketplace (Backend)\" && npx hardhat run scripts/deploy.js --network localhost",
    "node:start": "cd \"Marketplace (Backend)\" && npx hardhat node",
    "node:persistent": "cd \"Marketplace (Backend)\" && npm run node:persistent",
    "test:contracts": "cd \"Marketplace (Backend)\" && npx hardhat test",
    "install:workspaces": "npm install",
    "clean:all": "rimraf node_modules \"*/node_modules\" \"*/*/node_modules\"",
    "clean:dist": "rimraf \"*/dist\" \"*/build\" \"*/.next\"",
    "audit:all": "npm audit && npm audit --workspaces",
    "update:all": "npm update && npm update --workspaces",
    "lint:frontend": "cd \"Marketplace (Frontend)\" && npm run lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "typecheck": "cd \"Marketplace (Frontend)\" && tsc --noEmit"
  },
  "keywords": [
    "web3",
    "cad",
    "marketplace",
    "blockchain",
    "engineering",
    "monorepo"
  ],
  "author": "ChainTorque Team",
  "license": "ISC",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^2.0.0",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@openzeppelin/contracts": "^4.9.3",
    "@types/node": "^20.5.0",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "hardhat": "^2.17.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.5",
    "typescript": "^5.2.2",
    "vite": "^5.2.0"
  },
  "dependencies": {
    "@clerk/clerk-js": "^5.85.0",
    "@clerk/clerk-react": "^5.42.1",
    "@clerk/clerk-sdk-node": "^4.13.7",
    "@nomicfoundation/hardhat-toolbox": "^2.0.2",
    "@openzeppelin/contracts": "^4.9.6",
    "@pinata/sdk": "^2.1.0",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-toast": "^1.1.4",
    "@radix-ui/react-toggle": "^1.1.10",
    "@radix-ui/react-toggle-group": "^1.1.11",
    "@radix-ui/react-tooltip": "^1.0.6",
    "@tanstack/react-query": "^4.28.0",
    "autoprefixer": "^10.4.21",
    "axios": "^1.5.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "ejs": "^3.1.10",
    "ethers": "^5.8.0",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "hardhat": "^2.26.3",
    "helmet": "^7.0.0",
    "ipfs-http-client": "^60.0.1",
    "lucide-react": "^0.263.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "next-themes": "^0.2.1",
    "nodemon": "^3.1.10",
    "pinata": "^2.4.9",
    "pinata-web3": "^0.5.4",
    "postcss": "^8.5.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.1",
    "sonner": "^1.7.4",
    "tailwind-merge": "^1.14.0",
    "tailwindcss": "^3.4.11",
    "tailwindcss-animate": "^1.0.7",
    "web3": "^4.11.1"
  }
}
